<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<Button
    android:id="@+id/list_inventory_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="114dp"
    android:text="List Inventory"
    android:onClick="listInventory"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/make_inventory_button"
        android:layout_alignStart="@+id/make_inventory_button" />

    <Button android:id="@+id/make_inventory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/list_inventory_button"
        android:layout_alignStart="@id/list_inventory_button"
        android:text="Make Inventory"
        android:onClick="makeInventory"/>


